<div class="container">
  <ul class="list-unstyled d-flex flex-wrap justify-content-between">
    <% @artists.each do |artist| %>
      <li class="border rounded p-2 m-2">
        <%= link_to "#{artist.last_name}, #{artist.first_name} (#{artist.birthday} - #{artist.deathday unless artist.deathday.nil?})", artist_path(artist), class: "text-decoration-none" %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Künstler hinzufügen', new_artist_path, class: "btn btn-primary m-2" %>
</div>
