<div class="container">
  <div class="table-to-print" data-print-target="table">
    <h1><%= @manufacturer.name %></h1>

    <p>Ort: <%= @manufacturer.location %></p>

    <ul class="list-group mb-2">
      <% @manufacturer.items.each do |item| %>
      <li class="list-group-item">
        <%= link_to item_path(item) do %>
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <% if item.photos.first %>
            <%= image_tag item.photos.first.url, width: 40, height: 40, class: "mr-3"  %>
            <% else %>
            <%= image_tag asset_path('placeholder.png'),
                width: 40,
                height: 40,
                class: "mr-3",
                style: "filter: grayscale(100%); opacity: 0.7; background-color: #d3d3d3;" %>
            <% end %>
            <span class="font-weight-bold"><%= item.titel %></span>
            <span class=""><%= item.category %></span>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>

  <%= link_to edit_manufacturer_path(@manufacturer), class: "btn btn-warning" do %>
    <i class="fas fa-edit"></i> Bearbeiten
  <% end %>

  <%= link_to manufacturer_path(@manufacturer), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Bist du sicher?" }, class: "btn btn-danger" do %>
    <i class="fas fa-trash-alt"></i> Löschen
  <% end %>

  <%= link_to @index_url, class: "btn btn-primary" do %>
    <i class="fas fa-arrow-left"></i> Zurück
  <% end %>
</div>
