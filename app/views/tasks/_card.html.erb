<div class="card mb-4">
  <div class="card-body">
    <h3>To-Do's</h3>
    <ul class="list-group">
      <% @item.tasks.each do |task| %>
        <li class="list-group-item">
          <%= link_to "#{task.titel}", item_task_path(@item, task) %>
          <i class="fa-regular <%= task.done ? 'fa-square-check' : 'fa-square' %>"></i>
          <%= link_to item_task_path(@item, task), data: { turbo_method: :delete, turbo_confirm: "Bist du sicher?" } do %>
            <i class="fas fa-regular fa-trash-can text-danger"></i>
          <% end %>
        </li>


      <% end %>
    </ul>
    <%= link_to new_item_task_path(@item), class: "btn btn-primary mt-3" do %>
      <i class="fas fa-plus"></i> To-Do hinzuf√ºgen
    <% end %>
  </div>
</div>
