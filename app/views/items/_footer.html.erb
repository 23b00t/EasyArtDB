<div class="d-flex justify-content-between mb-4">
  <div class="mr-4">
    <%= link_to edit_item_path(@item), class: "btn btn-warning" do %>
      <i class="fas fa-edit"></i> Bearbeiten
    <% end %>

    <%= link_to item_path(@item), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Bist du sicher?" }, class: "btn btn-danger" do %>
      <i class="fas fa-trash-alt"></i> Löschen
    <% end %>

    <%= link_to items_path, class: "btn btn-primary" do %>
      <i class="fas fa-arrow-left"></i> Zurück
    <% end %>
  </div>

  <div class="ml-4">
    <% if @previous_item_id.present? %>
      <%= link_to item_path(@previous_item_id), class: "btn btn-primary" do %>
        <i class="fas fa-arrow-left"></i> Vorheriges Objekt
      <% end %>
    <% end %>

    <% if @next_item_id.present? %>
      <%= link_to item_path(@next_item_id), class: "btn btn-primary" do %>
        <i class="fas fa-arrow-right"></i> Nächstes Objekt
      <% end %>
    <% end %>
  </div>
</div>
