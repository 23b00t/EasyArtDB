<nav aria-label="...">
  <ul class="pagination justify-content-center">
    <% if @items.prev_page %>
      <li class="page-item">
        <%= link_to "Vorherige", items_path(page: @items.prev_page), remote: true, data: { controller: "pagination", action: "click->pagination#link" }, class: "page-link", rel: "prev" %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Vorherige</span>
      </li>
    <% end %>

    <% if @items.total_pages > 1 %>
      <% start_page = [@items.current_page - 5, 1].max %>
      <% end_page = [start_page + 9, @items.total_pages].min %>
      <% if start_page > 1 %>
        <li class="page-item">
          <%= link_to "1", items_path(page: 1), remote: true, data: { controller: "pagination", action: "click->pagination#link" }, class: "page-link" %>
        </li>
        <li class="page-item disabled">
          <span class="page-link">...</span>
        </li>
      <% end %>
      <% (start_page..end_page).each do |page| %>
        <% if page == @items.current_page %>
          <li class="page-item active" aria-current="page">
            <span class="page-link"><%= page %></span>
          </li>
        <% else %>
          <li class="page-item">
            <%= link_to page, items_path(page: page), remote: true, data: { controller: "pagination", action: "click->pagination#link" }, class: "page-link" %>
          </li>
        <% end %>
      <% end %>
      <% if end_page < @items.total_pages %>
        <li class="page-item disabled">
          <span class="page-link">...</span>
        </li>
        <li class="page-item">
          <%= link_to @items.total_pages, items_path(page: @items.total_pages), remote: true, data: { controller: "pagination", action: "click->pagination#link" }, class: "page-link" %>
        </li>
      <% end %>
    <% end %>

    <% if @items.next_page %>
      <li class="page-item">
        <%= link_to "Nächste", items_path(page: @items.next_page), remote: true, data: { controller: "pagination", action: "click->pagination#link" }, class: "page-link", rel: "next" %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Nächste</span>
      </li>
    <% end %>

    <% if @items.total_pages > 1 %>
      <li class="page-item">
        <%= link_to 'Druckansicht', items_path(show_all: true), class: 'btn btn-warning', remote: true, data: { controller: 'pagination', action: 'click->pagination#link' } %>
      </li>
    <% end %>
  </ul>
  <% if @items.total_pages > 1 %>
    <p class="text-center">Seite <%= @items.current_page %> von <%= @items.total_pages %></p>
  <% end %>
</nav>
