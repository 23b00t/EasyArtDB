<div class="card mb-4">
  <div class="card-body">
    <h3>Provenienz</h3>
    <ul class="list-group">
      <% @item.provenances.each do |provenance| %>
        <li class="list-group-item">
          <%= "#{provenance.text}: #{provenance.source}" %>
          <%= link_to edit_item_provenance_path(@item, provenance), class: "btn btn-warning btn-sm float-end" do %>
            <i class="fas fa-pencil-alt"></i> Ändern
          <% end %>
          <%= link_to item_provenance_path(@item, provenance), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm float-end me-2" do %>
            <i class="fas fa-trash-alt"></i> Löschen
          <% end %>
        </li>
      <% end %>
    </ul>
    <%= render partial: 'provenances/form', locals: { item: @item, provenance: Provenance.new } %>
  </div>
</div>
