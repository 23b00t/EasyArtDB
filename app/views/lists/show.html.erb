<div class="container" data-controller="columns-filter">
  <h1><%= @list.name %></h1>

  <div>
    <i class="fa-solid fa-filter icon m-2" data-action="click->columns-filter#displayForm"></i>
    <div class="d-flex m-4 d-none icon" data-columns-filter-target="toggle">
      <div class="col-6">
        <%= render partial: 'items/search' %>
      </div>
      <div class="col-6">
        <%= render partial: 'items/checkboxes' %>
      </div>
    </div>

    <div>
      <%= render partial: 'items/table', locals: { items: @list.items } %>
      <button class="btn btn-danger m-2" data-action="click->columns-filter#deleteBookmarks">Von Liste entfernen</button>
    </div>
  </div>
</div>
